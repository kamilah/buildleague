<table class="table table-striped table-bordered table-responsibe">
  <tr>
   <th class="size center">Image</th>
    <th class="size_four center">Name</th>
    <th class="size_two center">Description</th>
    <th class="center">Price</th>
    <th>Action</th>
  </tr>
      <% @products.each do |product| %>
      <tr>
        <td class="image_thumb"><%= image_tag product.image.url %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= number_to_currency(product.price) %></td>
         <td>
        <div class="btn-group">
          <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "View", product, class: "btn btn-link" %></li>
            <li><%= link_to "Edit", edit_product_path(product), class: "btn btn-link" %></li>
            <li><%= link_to 'Destroy', product, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
          </ul>
        </div>
      </td>
</tr>
<% end %>
</table>



