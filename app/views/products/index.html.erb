<div class="row">
      <% @products.each do |product| %>
  <div class="col-md-3">
    <div class="images-thumb">
    <div class="thumbnail">
      <%= link_to image_tag(product.image.url), product %>
        <div class="caption">
          <h2><strong><%= product.name %></strong></h2>
          <h4><strong><%= number_to_currency(product.price) %></strong></h4>
          <h3><%= product.user.name %></h3>
          </div>
      </div>
      
          <% if (user_signed_in?) && (current_user == product.user) %>
            <%= link_to 'Edit', edit_product_path(product), class: "btn btn-link" %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
          <% end %>
 
    
     </div>
    </div>
  <% end %>
</div>

<br>
<br>
<% if user_signed_in? %>
<%= link_to 'New Product', new_product_path, class: "btn btn-link" %>
<% end %>